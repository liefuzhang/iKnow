@using iKnow.ViewModels
@model QuestionAnswerCountViewModel
@{
    ViewBag.Title = "Index";
}

<div class="answer-container main-content-container">
    <div class="content-header">
        <h3>Recommended Questions</h3>
    </div>
    <div class="answer-body load-more-list" data-current-page=@Model.Page>
        @Html.Partial("_AnswerQuestionListPartial", Model.QuestionsWithAnswerCount)
    </div>
    @Html.Partial("_LoadMorePartial")
</div>

<div class="sidebar ">
    <div class="topic-sidebar sidebar-section divided-section">
        @Html.Action("GetRecommentedTopics", "Topic")
    </div>
    <div class="sidebar-section divided-section">
        @Html.Partial("_SideBarSiteInfo")
    </div>
</div>

@section scripts {
    <script>
        $(".to-load").on("click", function () { loadMoreHandler.call(this, "answer"); });
    </script>
}