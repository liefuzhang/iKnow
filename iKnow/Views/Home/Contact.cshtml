@{
    ViewBag.Title = "Contact";
}

<div class="contact-container">
    <h3 class="content-header">@ViewBag.Title</h3>
    <div class="contact-content">
        <p>
            iKnow is a Quora-like open source project that aims to provide people with a platform where they can share their
            knowledge and different perspectives on various topics. As the knowledge explodes in modern society, sharing with
            and learning from other people have become more important than ever.
        </p>
        <p>Stay informed. Stay connected.</p>
        <p>
            Contact: <a href="mailto:liefuzhangnz@gmail.com">liefuzhangnz@gmail.com</a>
        </p>

        <div class="img-container">
            <img src="/Content/Images/connected-world.png" />
        </div>
    </div>
</div>

@section footer {
    <div class="footer content-container">
        &copy;&nbsp;@(DateTime.Now.Year + " iKnow")
        &middot;
        <span>@Html.ActionLink("Contact us", "Contact", "Home", null, new { @class = "text-link" })</span>
    </div>
}