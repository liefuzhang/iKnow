@using Microsoft.AspNet.Identity
@model iKnow.ViewModels.QuestionDetailViewModel

@Html.Action("GetAnswerPanelHeader", "Answer", new { id = User.Identity.GetUserId() })
@using (@Html.BeginForm("Save", "Answer")) {
    <div class="rich-editor">
        @Html.HiddenFor(m => m.AnswerPanelContent, new { @class = "answer-content-hidden" })
        <div class="full-screen enter-full-screen"><i class="fa fa-expand" aria-hidden="true"></i></div>
        <div class="full-screen exit-full-screen"><i class="fa fa-compress" aria-hidden="true"></i></div>
        <div class="rich-editor-inner">
        </div>
        <div class="rich-editor-footer">
            <button type="submit" class="btn align-right flex-order-2">Submit Answer</button>
            @if (Model.CanUserDeleteAnswerPanelAnswer) {
                <button type="submit" formaction=@Url.Action("Delete", "Answer") class="btn btn-delete flex-order-1 js-button-delete" data-delete-message="Are you sure you want to delete this answer?">Delete</button>
            }
        </div>
    </div>

    @Html.HiddenFor(m => m.UserAnswerId)
    @Html.HiddenFor(m => m.Question.Id)
    @Html.AntiForgeryToken()
}
