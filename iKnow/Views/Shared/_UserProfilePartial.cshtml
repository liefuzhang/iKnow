@model iKnow.Core.Models.AppUser

@if (Request.IsAuthenticated) {
    <div class="user-profile-inner">
        <div class="img-container">
            <img src=@Model.IconPath class="profile-photo"/>
        </div>
        <span>@Model.FirstName</span>
    </div>
    
    <div class="user-profile-dropdown hide">
        <div class="user-profile-dropdown-item">
            <a href="@Url.Action("UserProfile", "Account", new {userName = UrlParameter.Optional})">
                <i class="fa fa-cog" aria-hidden="true"></i>
                <span>Setting</span>
            </a>
        </div>
        <div class="user-profile-dropdown-item">
            @using (Html.BeginForm("LogOff", "Account")) {
                <button class="log-off" type="submit">
                    <i class="fa fa-sign-out" aria-hidden="true"></i>
                    <span>Log off</span>
                </button>
            }
        </div>
    </div>
} else {
    <a href="@Url.Action("Login", "Account")" class="login-link"><i class="fa fa-sign-in" aria-hidden="true"></i>Log in</a>
}
