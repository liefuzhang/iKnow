@model iKnow.Models.AppUser

@if (Request.IsAuthenticated) {
    <div class="user-profile-inner">
        <div class="img-container">
            <img src=@Model.IconPath class="profile-photo" />
        </div>
        <span>@Model.FirstName</span>
    </div>
} else {
    <a href="@Url.Action("Login", "Account")" class="login-link"><i class="fa fa-sign-in" aria-hidden="true"></i>Log in</a>
}

<div class="user-profile-dropdown hide">
    <div class="user-profile-dropdown-item">
        <i class="fa fa-cog" aria-hidden="true"></i>
        @Html.ActionLink("Settings", "UserProfile", "Account")
    </div>
    <div class="user-profile-dropdown-item">
        @using (Html.BeginForm("LogOff", "Account")) {
            @Html.AntiForgeryToken()
            <button class="log-off" type="submit">
                <i class="fa fa-sign-out" aria-hidden="true"></i>
                Log off
            </button>
        }
    </div>
</div>
