@model iKnow.Core.Models.AppUser
<div class="user-info-container">
    @if (Model != null) {
        <div class="img-container">
            <a href="@Model.ProfilePageUrl">
                <img src=@Model.IconPath />
            </a>
        </div>
        <div class="user-info">
            <a href="@Model.ProfilePageUrl">
                <b>@Model.FullName</b>
            </a>
            <div class="user-intro">@Model.Intro</div>
        </div>
    }
</div>
