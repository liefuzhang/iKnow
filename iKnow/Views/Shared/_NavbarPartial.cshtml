    <li class="@(ViewBag.CurrentPage == "Topic" ? "active" : "")">@Html.ActionLink("Topics", "Index", "Topic")</li>
    <!--
    -->
    <li class="@(ViewBag.CurrentPage == "Answer" ? "active" : "")">@Html.ActionLink("Answer", "Index", "Answer")</li>
