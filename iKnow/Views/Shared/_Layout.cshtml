<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - iKnow</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>
    <div class="navbar">
        <span class="logo">iKnow</span>
        <input class="search" type="text" placeholder="Search iKnow" />
        <ul class="navbar-nav">
            <li>@Html.ActionLink("Home", "Index", "Home")</li>
            <li>@Html.ActionLink("Topic", "Index", "Topic")</li>
            <li>@Html.ActionLink("Answer", "Index", "Answer")</li>
            <li>@Html.ActionLink("Add Question", "Index", "Question")</li>
        </ul>
        <img class="profile-photo" />
        <span>Zhang Liefu</span>
    </div>
    @RenderBody()

    @Scripts.Render("~/bundles/js")
    @RenderSection("scripts", required: false)
</body>
</html>
