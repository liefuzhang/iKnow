@using iKnow.Models
@using iKnow.ViewModels
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://fonts.googleapis.com/css?family=Open+Sans|Roboto:100,200,300,400,500" rel="stylesheet">
    <title>@ViewBag.Title - iKnow</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    @RenderSection("styles", required: false)
</head>
<body>
    <div class="navbar box-shadow">
        <div class="content-container">
            <span class="logo">@Html.ActionLink("iKnow", "Index", "Home")</span>
            <input class="search" type="text" placeholder="Search iKnow" />
            <ul class="navbar-nav">
                <li>@Html.ActionLink("Home", "Index", "Home")</li>
                <li>@Html.ActionLink("Topics", "Index", "Topic")</li>
                <li>@Html.ActionLink("Answer", "Index", "Answer")</li>
                <li><button class="js-button-add-question btn">Add Question</button></li>
            </ul>
            <div class="navbar-user">
                <img class="profile-photo" />
                <span>Admin</span>
            </div>
        </div>
    </div>
    <div class="main">
        <div class="content-container">
            @RenderBody()
        </div>
    </div>

    @Scripts.Render("~/bundles/js")
    @RenderSection("scripts", required: false)

    <div class="question-modal-container">
        @*@Html.Partial("../Question/_AddQuestionModalPartial", new AddQuestionViewModel())*@
    </div>
</body>
</html>
