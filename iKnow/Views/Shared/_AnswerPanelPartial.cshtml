@model iKnow.Core.Models.Answer

@await Component.InvokeAsync("AnswerPanelHeader", new { id = Model.AppUserId })
<div class="answer-panel-content-container">
    <div class="answer-panel-content">
        <div class="answer-panel-content-inner">@Html.Raw(Model.Content)</div>
        @await Component.InvokeAsync("AnswerEditIcon", new { id = Model.Id })
        @Html.Partial("_AnswerFooterPartial", Model)
    </div>
    <a class="expand-answer">
        Read More <i class="fa fa-angle-double-down" aria-hidden="true"></i>
    </a>
</div>