@model iKnow.Core.ViewModels.UserProfileViewModel

<div class="modal-inner profile-photo-modal-inner">
    @using (Html.BeginForm("SaveProfilePhoto", "Account", FormMethod.Post, new { @class = "profile-photo-form" }))
    {
        <h2>Edit Profile Photo</h2>
        @Html.AntiForgeryToken()
        <div class="form-group photo-canvas-container">
            <canvas id="photo-canvas" width="260" height="260"></canvas>
            <div class="photo-resizer">
                <input type="range" min="1" max="2" step="0.01"/>
            </div>
            @Html.TextBoxFor(m => m.PostedPhoto, new {type = "file", @class = "js-edit-profile-photo hide"})

        </div>
        <div class="form-group">
            <button type="submit" class="btn align-right">Save</button>
        </div>
    }
</div>

@Scripts.Render("~/bundles/jqueryval")