@model iKnow.Core.ViewModels.Account.LoginViewModel

@{
    ViewBag.Title = "Login";
}

<div class="login-form-container">
    <h3 class="content-header">@ViewBag.Title</h3>
    <div class="login-inner">
        @using (Html.BeginForm("Login", "Account", new { ReturnUrl = ViewBag.ReturnUrl }, FormMethod.Post, true, null)) {
            @Html.AntiForgeryToken()
            @Html.ValidationSummary(false, "", new { @class = "error" })
            <div class="form-group">
                @Html.LabelFor(m => m.Email)
                @Html.TextBoxFor(m => m.Email, new { @class = "form-control", placeholder = "Email" })
            </div>
            <div class="form-group">
                @Html.LabelFor(m => m.Password)
                @Html.PasswordFor(m => m.Password, new { @class = "form-control", placeholder = "Password" })
            </div>
            <div class="form-group login-buttons">
                @Html.ActionLink("Forgot your password?", "ForgotPassword")
                <button type="submit" class="btn">Log in</button>
            </div>
        }
        <div class="register-container">
            <span>No Account?</span>
            <a data-return-url=@ViewBag.ReturnUrl>Register here</a>
        </div>
    </div>
</div>

@section footer {
    <div class="footer content-container">
        &copy;&nbsp;@(DateTime.Now.Year + " iKnow")
        &middot;
        <span>@Html.ActionLink("Contact us", "Contact", "Home", null, new { @class = "text-link" })</span>
    </div>
}

@section scripts {
    <script>
        RegisterController.init();
    </script>
}

