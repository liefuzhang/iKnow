@model iKnow.Core.ViewModels.Account.ChangePasswordViewModel
@{
    ViewBag.Title = "Change password";
}


<div class="password-container">
    <h3 class="content-header">@ViewBag.Title</h3>
    <div class="change-password-inner">
        @using (Html.BeginForm("ChangePassword", "Account")) {
            @Html.AntiForgeryToken()
            @Html.ValidationSummary("", new { @class = "error" })
            <div class="form-group">
                @Html.LabelFor(m => m.OldPassword)
                @Html.PasswordFor(m => m.OldPassword, new { @class = "form-control", placeholder = "Old password" })
            </div>
            <div class="form-group">
                @Html.LabelFor(m => m.NewPassword)
                @Html.PasswordFor(m => m.NewPassword, new { @class = "form-control", placeholder = "New password" })
            </div>
            <div class="form-group">
                @Html.LabelFor(m => m.ConfirmPassword)
                @Html.PasswordFor(m => m.ConfirmPassword, new { @class = "form-control", placeholder = "Confirm password" })
            </div>
            <div class="form-group">
                <div class="form-group">
                    <button type="submit" class="btn">Change</button>
                </div>
            </div>
        }
    </div>
</div>


@section footer {
    <div class="footer content-container">
        &copy;&nbsp;@(DateTime.Now.Year + " iKnow")
        &middot;
        <span>@Html.ActionLink("Contact us", "Contact", "Home", null, new { @class = "text-link" })</span>
    </div>
}
