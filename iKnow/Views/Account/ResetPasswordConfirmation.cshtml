@{
    ViewBag.Title = "Reset Password Confirmation";
}

<div class="password-container">
    <h3 class="content-header">@ViewBag.Title</h3>
    <div>
        <p>
            Your password has been reset. Please @Html.ActionLink("click here to log in", "Login", "Account", routeValues: null, htmlAttributes: new { @class = "blue-link-color" })
        </p>
    </div>
</div>

@section footer {
    <div class="footer content-container">
        &copy;&nbsp;@(DateTime.Now.Year + " iKnow")
        &middot;
        <span>@Html.ActionLink("Contact us", "Contact", "Home", null, new { @class = "text-link" })</span>
    </div>
}
